<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <i class="fa fa-search fa-lg" aria-hidden="true"></i>
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <%= link_to image_tag("twitpaw.png", id: "logo"), root_path %>
    <nav>
      <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav navbar-right">
          <%= link_to "X", root_path, class: "toggle2" %>
          <% if logged_in? %>
            <li class="nav-button"><%= link_to "Users", users_path %></li>
          <% else %>
            <li class="nav-button"><%= link_to "Sign up", signup_path %></li>
          <% end %>
          <% if logged_in? %>
            <li class="nav-button dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Log out", logout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li class="nav-button login-button"><%= link_to "Log in", login_path %></li>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>
</header>
